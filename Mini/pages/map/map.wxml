<view wx:if="{{hasLoad}}" class="order-map">
        <map
        id="map"
        longitude="{{longitude}}"
        latitude="{{latitude}}"
        scale="10"
        controls="{{controls}}"
        bindcontroltap="controltap"
        markers="{{markers}}"
        bindmarkertap="markertap"
        polyline="{{polyline}}"
        bindregionchange="regionchange"
        show-location
        style="width: 100%; height: 600px;"
      ></map>
</view>

