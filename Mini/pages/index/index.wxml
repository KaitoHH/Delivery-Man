<!--index.wxml-->
<view class="index-container">
  <view class="header" hidden="{{searchInputShowed}}">
    <view class="location">
      <view class="location-icon">
        <wxc-icon size="50" type="address"></wxc-icon>
      </view>
      <view class="location-text-block">
        <view class="location-text">
            上海交通大学上海交通大学上海交通大学上海交通大学上海交通大学上海交通大学上海交通大学上海交通大学上海交通大学
        </view>
        <wxc-icon size="40" type="arrow-down"></wxc-icon>
      </view>
    </view>
  </view>
  <view class="search-bar">
      <view class="page__bd">
        <view class="weui-search-bar">
          <view class="weui-search-bar__form">
            <view class="weui-search-bar__box">
              <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
              <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{searchinputVal}}" focus="{{searchInputShowed}}"
                bindinput="inputTyping" />
              <view class="weui-icon-clear" wx:if="{{searchinputVal.length > 0}}" bindtap="clearInput">
                <icon type="clear" size="14"></icon>
              </view>
            </view>
            <label class="weui-search-bar__label" hidden="{{searchInputShowed}}" bindtap="showInput">
              <icon class="weui-icon-search" type="search" size="14"></icon>
              <view class="weui-search-bar__text">搜索</view>
            </label>
          </view>
          <view class="weui-search-bar__cancel-btn" hidden="{{!searchInputShowed}}" bindtap="hideInput">搜索</view>
          <view class="weui-search-bar__cancel-btn" hidden="{{!searchInputShowed}}" bindtap="hideInput">取消</view>
        </view>
        <view class="weui-cells searchbar-result" wx:if="{{searchinputVal.length > 0}}">
          <navigator url="" class="weui-cell" hover-class="weui-cell_active">
            <view class="weui-cell__bd">
              <view>实时搜索文本</view>
            </view>
          </navigator>
          <navigator url="" class="weui-cell" hover-class="weui-cell_active">
            <view class="weui-cell__bd">
              <view>实时搜索文本</view>
            </view>
          </navigator>
          <navigator url="" class="weui-cell" hover-class="weui-cell_active">
            <view class="weui-cell__bd">
              <view>实时搜索文本</view>
            </view>
          </navigator>
          <navigator url="" class="weui-cell" hover-class="weui-cell_active">
            <view class="weui-cell__bd">
              <view>实时搜索文本</view>
            </view>
          </navigator>
        </view>
      </view>
  </view>
  <view class="search-about" hidden="{{!searchInputShowed}}">
    <text>Search About </text>
  </view>
  <view class="store" hidden="{{searchInputShowed}}">
    <text>Store List </text>
  </view>
</view>
